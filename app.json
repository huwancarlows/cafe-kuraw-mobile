{
  "expo": {
    "name": "Wage Calculator",
    "slug": "WageCalculatorApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets//ics.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to upload proof of payment.",
        "NSCameraUsageDescription": "This app requires access to your camera to capture proof of payment."
      },
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/ics.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET" 
      ],
      "package": "com.huwankarlos.kurawcoffeeshopapp",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
"plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true 
          }
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "59e42461-4d18-4c56-bd27-d4e57bdf3ed5"
      }
    },
    "owner": "huwankarlos"
  }
}
